{
    "name": "michel/laravel-theme",
    "description": "A Laravel package for multi-theme support with dynamic view path switching",
    "keywords": ["laravel", "theme", "views", "multi-theme"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Michel",
            "email": "michel@example.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0"
    },
    "autoload": {
        "psr-4": {
            "Michel\\LaravelTheme\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Michel\\LaravelTheme\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Michel\\LaravelTheme\\ThemeServiceProvider"
            ],
            "aliases": {
                "Theme": "Michel\\LaravelTheme\\Facades\\Theme"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
